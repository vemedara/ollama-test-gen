{
  "manifest_version": 3,
  "name": "ChatGPT sidebar for Chrome",
  "description": "Open-AI Chat GPT sidebar",
  "version": "1.0.0",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Click to open ChatGPT sidebar"
  },
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "sidePanel",
    "declarativeNetRequest",
    "tabs",
    "notifications",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      }
    }
  }
}